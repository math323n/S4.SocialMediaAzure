@model IEnumerable<S4.SocialMediaAzure.Entities.Models.AspNetPost>

@{
 
    ViewData["Title"] = "Index";
}

<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Posts</h1>
            <div class="d-flex justify-content-center">
                <img src="~/img/trollface.png" height="50" width="50" class="mx-3" /><p class="lead text-muted">Create le post.</p><img src="~/img/trollface.png" height="50" width="50" class="mx-3" />
            </div>

            <p>
                <a asp-action="create" class="btn btn-primary my-2">Le new post</a>
            </p>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach(var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@item.Image" height="300" width="400" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                       
                                            <a asp-action="Edit" asp-route-id="@item.PkId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@item.PkId" class="btn btn-sm btn-outline-secondary">Delete</a>
                                        
                                    </div>
                                 
                                </div>
                            </div>
                        </div>
                    </div>;
                }
            </div>
        </div>
    </div>
</main>